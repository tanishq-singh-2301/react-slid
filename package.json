{
    "name": "react-component-library-ts",
    "version": "0.0.6",
    "description": "A component library for getting started with easy to re-use components for everyday projects.",
    "author": "Tanishq Singh <tanishqsingh640@gmail.com>",
    "contributors": [],
    "repository": "https://github.com/tanishq-singh-2301/react-component-library-ts.git",
    "license": "MIT",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rm -rf dist && yarn pretty && yarn build:esm && yarn build:cjs && yarn build:css",
        "build:esm": "tsc",
        "build:cjs": "tsc --module CommonJS --outDir dist/cjs",
        "build:css": "tailwindcss -i ./styles/global.css -o ./dist/index.css --minify",
        "watch": "rm -rf dist && concurrently \"yarn watch:esm\" \"yarn watch:cjs\" \"yarn watch:css\" ",
        "watch:esm": "tsc --watch",
        "watch:cjs": "tsc --module CommonJS --outDir dist/cjs --watch",
        "watch:css": "tailwindcss -i ./styles/global.css -o ./dist/index.css --watch",
        "pretty": "prettier --write src"
    },
    "devDependencies": {
        "@types/node": "^17.0.21",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.6",
        "concurrently": "^7.3.0",
        "prettier": "^2.7.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.1.8",
        "typescript": "^4.5.2"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
